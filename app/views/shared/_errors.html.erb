<% if resource.present? && resource.errors.any? %>
  <div class='resource-errors' data-resource-id="<%= resource.id %>">
    <h2><%= pluralize(resource.errors.count, 'error') %></h2>
    <ul>
      <% resource.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>