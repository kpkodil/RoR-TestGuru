<%= form_with model: [:admin, @badge], local: true do |form| %>
  <%= render 'shared/errors', resource: @badge %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :badge_title%>
  </p><br>

  <p>
    <%= form.label :image_url %><br>
    <%= form.text_field :image_url, id: :badge_image_url%>
  </p><br>

  <p>
    <%= form.label :rule_type %><br>
    <%= form.collection_select :rule_type, BadgeDepartmentService.const_get("RULES").keys, :itself, :to_s, {} %>
  </p>  

  <p>
    <%= form.label :rule_value %><br>
    <%= form.number_field :rule_value, id: :badge_rule_value %>
  </p>

  <p><%= form.submit %></p>
<% end %>
